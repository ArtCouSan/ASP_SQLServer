@model IEnumerable<WebApplication1.Models.Serie>

@{
    ViewBag.Title = "CRUD de Series";
}

<h2>CRUD Series</h2>

<p>
    @Html.ActionLink("Criar nova série", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Temporada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Episodio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sinopse)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Temporada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Episodio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sinopse)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Titulo }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Titulo }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Titulo })
        </td>
    </tr>
}

</table>
