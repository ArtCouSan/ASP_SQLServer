<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Prova 2", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Registros Series", "Index", "Series")</li>
                    <li>@Html.ActionLink("Registros Filmes", "Index", "Filmes")</li>
                    <li>@Html.ActionLink("Registros Animes", "Index", "Animes")</li>               
                 </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <p class="text-center">Prova 2, requisitada pelo professor Calixto</p>
        <ul>Integrantes
        <li>Arthur Coutinho</li>
        <li>Eloisa Apolinario</li>
        <li>Livia Cristina</li>
        </ul>

        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - My ASP.NET Application develop by Arthur</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
